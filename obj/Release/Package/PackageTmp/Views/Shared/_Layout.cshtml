
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="row">
        <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark pt-5 navbar-custom">
            <div class="container">
                <a class="navbar-brand" style="font-size: px;" href="~/Apresentacao/IndexApresentacao">BitSimulator</a>
                <button data-toggle="collapse" class="navbar-toggler" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="nav navbar-nav ml-auto">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" href="~/Apresentacao/IndexInstrucao">Instruções</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" href="~/Apresentacao/IndexSobre">Sobre</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" href="~/Apresentacao/IndexComando">Comandos</a>
                            </li>
                        </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="row" style="width: 100%;">
        <div class="body-content" style="width: 100%; ">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
            </footer>
        </div>
    </div>
    <footer class="py-5 bg-black">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 ">
                    <p class="text-left text-white m-0 small">Desenvolvedores: </p>
                    <p class="text-left text-white m-0 small">Adrian Devid Menezes Santos</p>
                    <p class="text-left text-white m-0 small">Dhiego Costa</p>
                    <p class="text-left text-white m-0 small">Diego Villela</p>
                    <p class="text-left text-white m-0 small">Mayson Petterson</p>
                </div>
                <div class="col-xl-4">
                    <p class="text-left text-white m-0 small">Redes Sociais: </p>
                    <p class="text-left text-white m-0 small">@@Adrian Devid Menezes Santos</p>
                    <p class="text-left text-white m-0 small">@@Dhiego Costa</p>
                    <p class="text-left text-white m-0 small">@@Diego Villela</p>
                    <p class="text-left text-white m-0 small">@@Mayson Petterson</p>
                </div>
                <div class="col-xl-4">
                    <p class="text-left text-white m-0 small">Atruições: </p>
                    <p class="text-left text-white m-0 small">IFS - Instituto Federal de Educação, Ciência e Tecnologia de Sergipe</p>
                    <p class="text-left text-white m-0 small">IFS - Campus Itabaiana</p>
                </div>
            </div>
        </div>
    </footer>
    @RenderSection("JsAdicional", required: false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

